<div class="form-group nested-fields">
  <%= f.label :name %>
  <%=
    f.text_field :name, 
    class: 'form-control', 
    placeholder: 'e.g. HTML, JS, JQuery, C#, Java',
    onfocus: "this.placeholder = ''",
    onblur: "this.placeholder = 'e.g. HTML, JS, JQuery, C#, Java'" 
  %>  
  <%= link_to_remove_association 'Remove Technology', f %>
</div>